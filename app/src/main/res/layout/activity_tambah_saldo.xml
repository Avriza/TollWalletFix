<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TambahSaldo">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="70dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">
            <Button
                android:id="@+id/dualima"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Rp 25.000"
                android:textSize="17dp"
                android:padding="20dp"
                android:layout_marginHorizontal="20dp"
                android:background="@color/colorPrimary"
                android:textColor="@color/colorAccent"/>

            <Button
                android:id="@+id/limapuluh"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Rp 50.000"
                android:textSize="17dp"
                android:padding="20dp"
                android:layout_marginHorizontal="20dp"
                android:background="@color/colorPrimary"
                android:textColor="@color/colorAccent"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/seratus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Rp 100.000"
                android:textSize="17dp"
                android:padding="20dp"
                android:layout_marginHorizontal="20dp"
                android:background="@color/colorPrimary"
                android:textColor="@color/colorAccent"/>

            <Button
                android:id="@+id/seratusdualima"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Rp 125.000"
                android:textSize="17dp"
                android:padding="20dp"
                android:layout_marginHorizontal="20dp"
                android:background="@color/colorPrimary"
                android:textColor="@color/colorAccent"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/tigaseratus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Rp 300.000"
                android:textSize="17dp"
                android:padding="20dp"
                android:layout_marginHorizontal="20dp"
                android:background="@color/colorPrimary"
                android:textColor="@color/colorAccent"/>

            <Button
                android:id="@+id/limaratus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Rp 500.000"
                android:textSize="17dp"
                android:padding="20dp"
                android:layout_marginHorizontal="20dp"
                android:background="@color/colorPrimary"
                android:textColor="@color/colorAccent"/>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>